 {
    "version": "0.2.0",
    "configurations": [
        
        // ===== Video Scene Graph Generation: Learning Temporal Consistency for Video Scene Graph generation. ===== //
        // ============ {TEMPURA(AG), TEAT-GT(AG), TEAT-GT(VidVRD)} ============ //

        // ========================= {TEAT-GT(AG)} ========================= //
        // ======== [Train, Test, Evaluate : PredCLS, SGCLS, SGDET] ======== //
        {
            "name": "TEAT-GT_Train.py",             // TEAT-GT Train
            "type": "python",
            "request": "launch",
            "args": [
                "--mode", "sgdet",                // [predcls, sgcls, sgdet]
                "--datasize", "large",              // [large, mini]
                "--data_path", "/data/AG/",         // [AG, VidVRD]
                "--lr", "1e-5",
                "--warmup", "2",
                "--nepoch", "20",
                "--save_path", "checkpoint/TEATGT/",
                "--lap_node_id",
                "--lap_node_id_k", "50",
                "--type_id",
                "--use_ctl_loss",          
                "--use_cons_str_loss",
                "--use_cons_sem_loss"
            ],
            "program": "TEATGT_train.py",
            "console": "integratedTerminal",
            "justMyCode": true,
        },

        {
            "name": "TEAT-GT_Test.py",              // TEAT-GT Test
